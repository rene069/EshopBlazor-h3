@page
@model Eshop.Areas.Admin.Pages.IndexModel
@{
}

<a asp-page="/CreateProduct" class="btn btn-dark">Create Produkt</a>
@if (Model.Produkts != null)
{


    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">ProduktName</th>
                <th scope="col">BrandName</th>
                <th scope="col">TypeName</th>
                <th scope="col">Deleted?</th>
                <th scope="col">Price</th>
                <th scope="col">Handlinger</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Produkts)
            {
                <form method="post">
                <tr>
                    <th scope="row">@item.ProduktId</th>
                    <td>@item.ProduktName</td>
                    <td>@item.BrandName</td>
                    <td>@item.TypeName</td>
                    <td>@item.IsSoftDeleted</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@item.ProduktId" asp-page="/EditProduct">Edit</a>
                        |
                        <button class="btn btn-info" asp-route-id="@item.ProduktId" asp-page-handler="SoftDelete">SoftDelete</button>
                        |
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Dette kan ikke fortrydes')" asp-route-id="@item.ProduktId" asp-page-handler="Delete">Remove</button>
                    </td>
                </tr>
                </form>
            }
        </tbody>
    </table>

}